{
  "name": "@blen/react-native-usmds",
  "version": "1.25.0",
  "private": true,
  "description": "React Native UI components based on US Mobile Design System",
  "scripts": {
    "build": "turbo build",
    "build:docs": "turbo run build --filter=docs",
    "build:examples": "turbo run build --filter=examples",
    "dev": "turbo dev",
    "dev:docs": "turbo dev --filter=docs",
    "dev:showcase": "turbo dev --filter=showcase",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepublishOnly": "turbo build",
    "publish:expo-go": "pnpm --filter showcase run publish:expo-go",
    "registry:generate": "turbo run registry:generate --filter=@blen/react-native-usmds-registry",
    "registry:package": "turbo run registry:package --filter=@blen/react-native-usmds-registry",
    "registry:validate": "turbo run registry:validate --filter=@blen/react-native-usmds-registry"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "semantic-release": "^24.2.7",
    "turbo": "^2.6.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.18.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "typescript",
        "tailwindcss",
        "react-native-reanimated"
      ],
      "allowedVersions": {
        "storybook": "8",
        "react-native-reanimated": "^4.0.0",
        "react": "^19.0.0"
      },
      "allowAny": [
        "@types/react",
        "react",
        "react-dom"
      ]
    },
    "overrides": {
      "@swc/helpers": "0.5.15",
      "react-docgen-typescript": "2.2.2",
      "lucide-react": "0.544.0",
      "react@^19.0.0": "19.1.0",
      "react-dom@^19.0.0": "19.1.0",
      "expo-dev-menu": "7.0.14",
      "react-native-svg": "15.12.1",
      "react-native-web": "0.21.1",
      "expo": "54.0.15",
      "@expo/fingerprint": "0.15.2",
      "expo-modules-core": "3.0.22"
    },
    "onlyBuiltDependencies": [
      "@swc/core",
      "@tailwindcss/oxide",
      "bun",
      "esbuild",
      "msw",
      "sharp",
      "unrs-resolver"
    ]
  }
}
