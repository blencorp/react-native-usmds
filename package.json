{
  "name": "react-native-usmds",
  "version": "0.1.0",
  "description": "React Native UI components based on US Mobile Design System",
  "scripts": {
    "build": "turbo build",
    "build:docs": "turbo run build --filter=docs",
    "build:examples": "turbo run build --filter=examples",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.1.3",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "yarn@4.3.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
